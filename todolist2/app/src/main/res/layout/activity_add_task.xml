<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp"
    tools:context=".presentation.AddTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Task Title -->
        <EditText
            android:id="@+id/etTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Task Title"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <!-- Task Description -->
        <EditText
            android:id="@+id/etTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Task Description"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp" />

        <!-- Attach Button -->
        <Button
            android:id="@+id/btnAttachFile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Attach File or Image"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#607D8B"
            android:layout_marginBottom="16dp" />

        <!-- Due Date -->
        <TextView
            android:id="@+id/tvDueDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Select Due Date"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Due Time -->
        <TextView
            android:id="@+id/tvDueTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Select Due Time"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Reminder Checkbox -->
        <CheckBox
            android:id="@+id/cbReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Reminder"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Reminder TimePicker (hidden by default) -->
        <TimePicker
            android:id="@+id/tpReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Save Task Button -->
        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save Task"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>
</ScrollView>
