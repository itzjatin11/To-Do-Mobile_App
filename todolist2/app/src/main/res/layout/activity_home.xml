<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.HomeActivity"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/backg" />

        <!-- Main Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">

                <!-- Top Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="TeachTask"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1" />

                    <!-- Logout Button -->
                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#D32F2F"
                        android:minHeight="48dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Logo Image -->
                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="App Logo"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_1" />

                <!-- Greeting Text -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Hello User"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <!-- Motivational Quote -->
                <TextView
                    android:id="@+id/tvRandomQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#66000000"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Stay focused and never give up!"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <!-- Categories Heading -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Categories"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Category Cards (4 Cards) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4">

                    <!-- Grading -->
                    <LinearLayout
                        android:id="@+id/btnGrading"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:elevation="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grading"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Lectures -->
                    <LinearLayout
                        android:id="@+id/btnLectures"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:elevation="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lectures"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Meetings -->
                    <LinearLayout
                        android:id="@+id/btnMeetings"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:elevation="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meetings"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- RSS Feed -->
                    <LinearLayout
                        android:id="@+id/btnRssFeed"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/card_bg"
                        android:elevation="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RSS Feed"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Add/View Tasks Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/card_bg"
                    android:elevation="12dp"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="Tasks"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Add Task Button -->
                    <LinearLayout
                        android:id="@+id/btnAddTask"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/white_button"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Task"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- View Task Button -->
                    <LinearLayout
                        android:id="@+id/btnViewTask"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/white_button"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Tasks"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Social Networks Footer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/btnFacebook"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Facebook"
                        android:src="@drawable/ic_facebook"
                        android:padding="8dp"
                        app:tint="@android:color/white" />

                    <ImageButton
                        android:id="@+id/btnLinkedIn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="LinkedIn"
                        android:src="@drawable/ic_linkedin"
                        android:padding="8dp"
                        app:tint="@android:color/white" />


                    <ImageButton
                        android:id="@+id/btnInstagram"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Instagram"
                        android:src="@drawable/ic_instagram"
                        android:padding="8dp"
                        app:tint="@android:color/white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
