<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Grading"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#212121"
            android:paddingBottom="24dp" />

        <!-- Course Name -->
        <EditText
            android:id="@+id/etCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Assignment/Test Type -->
        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assignment/Test"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Status Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Status Options -->
        <RadioGroup
            android:id="@+id/rgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="16sp"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/rbMarked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marked"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <!-- Due Date -->
        <EditText
            android:id="@+id/etDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Due Date (e.g., 20/06/2025)"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveGrade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Entry"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Saved Grades Title -->
        <TextView
            android:id="@+id/tvGradesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Grades"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Grades RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGrades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="2dp"
            android:clipToPadding="false" />

    </LinearLayout>
</ScrollView>
